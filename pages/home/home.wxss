}

.selectArea-wrap{
  margin-top: 40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  border-radius: 10rpx;
  background: #ffffff;
}
.auth-title{
  line-height: 60rpx;
  font-size: 30rpx;
}
.select-area-title{
  margin: 0 auto;
  border-bottom: 1px solid #666;
  width: 400rpx;
  height: 60rpx;
  position: relative;
}

.select-area-text{
  width: 300rpx;
  height: 60rpx;
  background: #fff;
  line-height: 60rpx;
  position: absolute;
  text-align: center;
  font-size: 30rpx;
  color: #666;
  top: 50%;
  left: 50%;
  margin-left: -150rpx;
}
.flow-step-icon{
  width: 26rpx;
  height: 28rpx;
  margin: 0rpx 27rpx;
}

.area-list{
  padding-top: 60rpx;
}

.area-list>view{
  width: 180rpx;
  height: 60rpx;
  margin-right: 45rpx;
  float: left;
  margin-bottom: 40rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  border-radius: 6rpx;
  border: 1px solid #c3182d;
  box-sizing: border-box;
}

.area-list>view:nth-child(3n){
  margin-right: 0rpx;
}
.area-list>view.active{
  background: linear-gradient(to right, #d0323f , #fe5029);
  color: #fff;
}
.area-list>view:active{
  background: linear-gradient(to right, #d0323f , #fe5029);
  color: #fff;
}

.more-btn{
  margin: 0 auto;
  margin-bottom: 40rpx;
  width:100rpx;
  height:40rpx;
  line-height: 40rp;
  color: #c3172d;
  position: relative;
  font-size: 24rpx;
}

.down-arrow{
  width: 26rpx;
  height: 30rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
  display: inline-block;
  margin: auto 10rpx;
  background-image: url("data:image/svg+xml;charset=utf-8,<svg width='16' height='26' viewBox='0 0 16 26' xmlns='http://www.w3.org/2000/svg'><path d='M2 0L0 2l11.5 11L0 24l2 2 14-13z' fill='%23c3172d' fill-rule='evenodd'/></svg>");
  background-size: contain;
  background-repeat: no-repeat;
  background-position: 50% 50%;
  transform: rotate(90deg);
}

