/* pages/fail/fail.wxss */

.page{
  width: 100%;
}
.fail-icon{
  width: 100%;
  height: 308rpx;
  text-align: center;
  line-height: 308rpx;
}

.fail-icon>image{
  width: 384rpx;
  height: 308rpx;
}

.fail-info{
  width:100%;
  height: 150rpx;
  text-align: center;
}


.fail-tip{
  padding-top: 20rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333;
}

.agin-btn{
  width: 612rpx;
  height: 80rpx;
  margin: 0 auto;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  background: linear-gradient(to right, #d0323f , #fe5029);
  color: #fff;
  border-radius: 8rpx;
}

.agin-btn-hover{
  background: linear-gradient(90deg,rgba(200,60,60,1) 0%,rgba(200,120,120,1) 100%);
}


.noAuth-btn{
  width: 612rpx;
  height: 91rpx;
  line-height: 91rpx;
  font-size: 36rpx;
  color: rgba(225,66,62,1);
  text-align: center;
  margin: 0 auto;
  margin-bottom: 30rpx;
  border: 1px solid rgba(225,66,62,1);
  border-radius: 46px;
}

.noAuth-btn-hover{
  background: linear-gradient(90deg,rgba(255,90,100,1) 0%,rgba(255,150,160,1) 100%);
  color: #fff;
}