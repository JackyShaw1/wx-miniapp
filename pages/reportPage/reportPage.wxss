/* pages/reportPage/reportPage.wxss */
.page{
  width: 100%;
  background: #f4f4f4;
}

.banner{
  width: 100%;
  height: 500rpx;
  /* background: url(../../images/report-img/banner.jpg) no-repeat center center; */
  background-size: 100% 100%;
  position: relative;
}
.banner .bgImg{
  width: 100%;
  height: 500rpx;
   position: absolute;
}
.title-box{
  width: 332rpx;
  height: 125rpx;
  position: absolute;
  left: 60rpx;
  top: 128rpx;
  color: #fff;
  font-style: italic;
}

.title-box .companyName{
  font-size: 40rpx;
  line-height: 50rpx;
}
.title-box .report-title{
  font-size: 60rpx;
  font-weight: 500;
}

.rating-box{
  width: 680rpx;
  height: 48rpx;
  position: absolute;
  left: 60rpx;
  top: 350rpx;
  color: #fff;
}

.rating-box>view{
  float: left;
}
.rating-box>view:nth-child(1){
  width: 260rpx;
}
.quality-rating-title{
  width: 138rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  background-image: -webkit-linear-gradient(left, #25bdb4, #1cbda1);
  background-image: -o-linear-gradient(left, #25bdb4, #1cbda1);
  background-image: -ms-linear-gradient(left, #25bdb4, #1cbda1);
  background-image: linear-gradient(left, #25bdb4, #1cbda1);
  border-radius: 6rpx;
  float: left;
}
.quality-rating-value{
  float: left;
  line-height: 48rpx;
  text-decoration: underline;
  text-indent: 10rpx;
  font-size: 24rpx;
}

.instrument-panel{
  width: 400rpx;
  height: 400rpx;
  position: absolute;
  right: 0rpx;
  top: 0rpx;
}

.instrument-panel>canvas{
  width: 100%;
  height: 100%;
}


.container-wrap{
  position: relative;
  top: -60rpx;
}
/* 块样式 */
.panel-block{
  margin: 20rpx;
  padding: 30rpx 20rpx 20rpx 20rpx;
  background: #fff;
  border-radius: 8rpx;
  position: relative;
}
.panel-title{
  width: 326rpx;
  height: 50rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.panel-title>image{
  width: 100%;
  height: 100%;
}

.group-content .group-item{
  margin: 0rpx 40rpx;
  padding: 20rpx 0rpx;
  border-bottom: 1px solid #cccccc;
  line-height: 40rpx;
  font-size: 24rpx;
  display: flex;
}
.group-label{
  width: 248rpx;
}
.group-label>text{
  padding-left: 10rpx;
  border-left: 2px solid #c4182e;
}
.group-value{
  flex: 1;
  color: #666666;
}

.evaluate-box{
  display: flex;
}

.evaluate-box>image{
  padding: 0rpx 20rpx;
  width: 164rpx;
  height: 32rpx;
}

.cut-off-line{
  padding: 20rpx 0rpx;
  width: 100%;
  height: 32rpx;
}

.cut-off-line>image{
  width: 100%;
  height: 100%;
}

.container{
  width: 100%;
  height: 600rpx;
}

canvas {
  width: 100%;
  height: 100%;
}
ff-canvas {
  width: 100%;
  height: 100%;
}
.chart-text{
  position: relative;
  width: inherit;
  text-align: center;
  color: #888;
  bottom: 20rpx;
  font-size: 30rpx;
}

.container-text{
  width: 100%;
  line-height: 400rpx;
  font-size: 30rpx;
}